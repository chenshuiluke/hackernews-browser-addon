{

  "manifest_version": 2,
  "name": "Hackernews Browser Addon",
  "version": "1.0.2",

  "description": "An addon that lists top hackernews stories from https://ng-hackernews.lukecs.com",

  "icons": {
    "48": "icons/hackernews.png"
  },
  "permissions": [
    "https://ng-hackernews.lukecs.com/*",
    "webRequest"
  ],

  "browser_action": {
    "default_icon": "icons/39_hackernews.png",
    "default_title": "Hackernews Addon",
    "default_popup": "popups/hackernews.html",
    "browser_style": true
  },

  "background":
  {
      "scripts": ["scripts/jquery.min.js", "scripts/hackernews.js"]
  }

}
